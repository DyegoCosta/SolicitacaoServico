<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Domain.Models.Apontamento" table="Apontamentos">
        <id name="ApontamentoId" type="int">            
        </id>
        <property name="detalhes"/>
        <property name="dataInicio"
                    type="date"
                    not-null="true"
                    update="false"/>
        <many-to-one name="ordemServico"
                    column="OrdemServicoId"
                    not-null="true"/>
        <many-to-one name="usuario"
                    column="UsuarioId"
                    not-null="true"/>
        <property name="dataTermino"
                    type="date"/>
    </class>
    <class name="Domain.Models.Cliente" table="Clientes">
        <id name="clienteId" type="int">            
        </id>
    </class>
    <class name="Domain.Models.OrdemServico" table="OrdemServicos">
        <id name="ordemServicoId" type="int">            
        </id>
    </class>
    <class name="Domain.Models.Usuario" table="Usuarios">
        <id name="usuarioId" type="int">            
        </id>
    </class>
</hibernate-mapping>
